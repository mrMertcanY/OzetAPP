@model OzetAPP.Models.Entity.tbl_kullanicilar
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!-- Basic Page Info -->
    <meta charset="utf-8">
    <title>Özet App</title>

    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/deskapp-master/vendors/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/deskapp-master/vendors/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/deskapp-master/vendors/images/favicon-16x16.png">

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/deskapp-master/vendors/styles/core.css">
    <link rel="stylesheet" type="text/css" href="~/deskapp-master/vendors/styles/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/deskapp-master/src/plugins/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" type="text/css" href="~/deskapp-master/vendors/styles/style.css">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119386393-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-119386393-1');
    </script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>



<body class="login-page">
    @if (ViewData["mesaj"] != null)
    {
        <script>
            window.onload = swal({ text: "Başarıyla Yeni Hesap Oluşturdunuz!", icon: "success", button: "Giriş Yap" }).then(ok => window.location = "/Login/Index");
        </script>

    }
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="brand-logo">
                <a href="/Register/Index">
                    <img src="~/deskapp-master/vendors/images/ozetapplogodark.png" alt="">
                </a>
            </div>
            <div class="login-menu">
                <ul>
                    <li><a href="/Login/Index">Giriş Yap</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 col-lg-7">
                    <img src="~/deskapp-master/vendors/images/register-page-img.png" alt="">
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="register-box bg-white box-shadow border-radius-10">
                        <div class="login-box bg-white box-shadow border-radius-10">
                            <form method="post">
                                <h5 class="text-center text-primary">Hesap Oluşturma Detayları</h5>
                                <br />   <br />
                                <section>
                                    <div class="form-wrap max-width-600 mx-auto">
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">İsim*</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="@ViewBag.txtisim" form-control" name="kullanici_isim">
                                                @Html.ValidationMessageFor(m => m.kullanici_isim, "", new { @class = "form-control-feedback has-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">Kullanıcı Adı*</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="@ViewBag.txtkullaniciad" name="kullanici_ad">
                                                @Html.ValidationMessageFor(m => m.kullanici_ad, "", new { @class = "form-control-feedback has-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">Şifre*</label>
                                            <div class="col-sm-8">
                                                <input type="password" class="@ViewBag.txtsifre" name="kullanici_sifre">
                                                @Html.ValidationMessageFor(m => m.kullanici_sifre, "", new { @class = "form-control-feedback has-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label" id="sifretekrar">Şifre Tekrar*</label>
                                            <div class="col-sm-8">
                                                <input type="password" class="@ViewBag.txtsifretekrar" name="kullanici_sifretekrar">
                                                @Html.ValidationMessageFor(m => m.kullanici_sifretekrar, "", new { @class = "form-control-feedback has-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="input-group mb-0">
                                        <input class="btn btn-outline-primary btn-lg btn-block" type="submit" value="Kayıt Ol" />
                                    </div>

                                </section>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- js -->
    <script src="~/deskapp-master/vendors/scripts/core.js"></script>
    <script src="~/deskapp-master/vendors/scripts/script.min.js"></script>
    <script src="~/deskapp-master/vendors/scripts/process.js"></script>
    <script src="~/deskapp-master/vendors/scripts/layout-settings.js"></script>
    <script src="~/deskapp-master/src/plugins/jquery-steps/jquery.steps.js"></script>
    <script src="~/deskapp-master/vendors/scripts/steps-setting.js"></script>

    <script src="~/deskapp-master/src/plugins/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/deskapp-master/src/plugins/sweetalert2/sweet-alert.init.js"></script>
</body>

</html>